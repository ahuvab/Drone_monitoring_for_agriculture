<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.airscort_agriculture.Activities.UserProfileActivity"
    android:background="@drawable/fade_bg">

    <RelativeLayout
        android:layout_width="830dp"
        android:layout_height="500dp"
        android:background="@drawable/border_black">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My profile:"
            android:id="@+id/title"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aa"
            android:id="@+id/firstName"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/title"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="2dp"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ee"
            android:id="@+id/lastName"
            android:layout_alignBottom="@+id/firstName"
            android:layout_toRightOf="@+id/firstName"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ttfddhhdgd"
            android:id="@+id/email"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/lastName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="120dp"
            android:textSize="15sp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My fields:"
            android:id="@+id/fields"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/email"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="120dp"
            android:textSize="15sp"/>

        <ListView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="-22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="200dp"
            android:dividerHeight="1.0sp"
            android:divider="#00000000"
            android:id="@+id/listView"
            android:layout_below="@+id/fields">
        </ListView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit profile"
            android:id="@+id/editProfile"
            android:layout_marginTop="-40dp"
            android:layout_below="@+id/listView"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</RelativeLayout>
